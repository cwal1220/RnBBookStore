-->
	<!-- [2] SqlSessionFactoryBean bean 선언 -->
	<bean id="sqlSessionFactory" 
		class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<!-- mapper등록 -->
		<property name="mapperLocations">
			<list>
				<value>classpath:config/joinMapper.xml</value>
			</list>
		</property>
	</bean>

	<!-- [3] SqlSessionTemplate bean 선언 -->
	<bean id="sqlSession"
		class="org.mybatis.spring.SqlSessionTemplate">
		<constructor-arg ref="sqlSessionFactory" />
	</bean>




<!-- controller -->
<bean class="controller.IndexController"/>
<bean class="controller.Menu1Controller"/>
<bean class="controller.Menu2Controller"/>
<bean class="controller.DetailController">
  <property name="dao" ref="memdao" /> 
</bean>


<!-- dao -->
	<bean id="memdao" class="dao.MemDaoImp">
		<property name="sqlSession" ref="sqlSession" />
	</bean>
	
<!-- tiles -->
<bean class="org.springframework.web.servlet.view.tiles3.TilesConfigurer">
 <property name="definitions">
 <list>
  <value>/WEB-INF/tiles.xml</value>
 </list>
 </property>

</bean>
<!-- view -->
<bean class="org.springframework.web.servlet.view.UrlBasedViewResolver">
   <property name="viewClass" value="org.springframework.web.servlet.view.tiles3.TilesView"/>
  <property name="order" value="1"/>
</bean>

<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
 <property name="prefix" value="/WEB-INF/view/"/>
		<property name="suffix" value=".jsp" />
		<property name="order" value="2"/>
</bean>


</beans>
